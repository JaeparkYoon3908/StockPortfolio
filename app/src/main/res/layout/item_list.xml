<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_"
        android:layout_width="@dimen/common_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/border_line_bottom_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.333"
        tools:text="매매일\n종목명" />

    <TextView
        android:id="@+id/list_1"
        android:layout_width="@dimen/common_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/border_line_bottom_right"
        app:layout_constraintStart_toEndOf="@+id/list_"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.333"
        tools:text="순손익금액\n수익률" />

    <TextView
        android:id="@+id/list_2"
        android:layout_width="@dimen/common_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/border_line_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_1"
        app:layout_constraintWidth_percent="0.333"
        tools:text="매수단가\n매도단가" />

</androidx.constraintlayout.widget.ConstraintLayout>